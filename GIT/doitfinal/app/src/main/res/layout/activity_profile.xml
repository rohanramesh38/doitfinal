<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_weight="2">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/spac"/>
    <LinearLayout
        android:layout_below="@+id/spac"

        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="bottom">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp"
                    >
                    <ImageView
                        android:layout_weight="1"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/fac"
                        android:layout_gravity="center"
                        android:gravity="bottom"
                        />

                </LinearLayout>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/imageforpicasso"
                    android:gravity="bottom"
                    android:scaleX="1"
                    android:scaleY="1"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#FFFFFF"
                    android:id="@+id/profilepic"
                    />
                <LinearLayout
                    android:background="#FFFFFF"

                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp"
                    >
                    <ImageView
                        android:layout_weight="1"
                        android:layout_width="150dp"
                        android:layout_height="180dp"
                        android:src="@drawable/bird"
                        android:layout_gravity="center"
                        android:gravity="bottom"
                        />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_alignParentBottom="true">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#a2a1b8"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_weight="1"

                    android:textSize="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="#a2a1b8"
                    android:maxLength="12"
                    android:background="#0000"
                    android:padding="16dp"
                    android:typeface="serif"
                    android:gravity="center"
                    />
                <EditText
                    android:layout_weight="1"
                    android:id="@+id/name"
                    android:textSize="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Anonymous"
                    android:textColorHint="#181737"
                    android:textColor="#181737"
                    android:maxLength="22"
                    android:background="#0000"
                    android:padding="16dp"
                    android:gravity="left"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#a2a1b8"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_weight="1"

                    android:textSize="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textColor="#a2a1b8"
                    android:maxLength="22"
                    android:background="#0000"
                    android:padding="16dp"
                    android:gravity="center"/>
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/mail"
                    android:textSize="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#1b193b"
                    android:text="Anonymus@track.com"
                    android:textColor="#181737"
                    android:background="#0000"
                    android:padding="16dp"
                    android:gravity="left"
                    />
            </LinearLayout>
            />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#a2a1b8"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone"
                    android:textColor="#a2a1b8"
                    android:maxLength="12"
                    android:background="#0000"
                    android:padding="16dp"
                    android:gravity="center"
                    />
                <EditText
                    android:layout_weight="1"
                    android:id="@+id/phone"
                    android:textSize="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#1b193b"
                    android:inputType="phone"
                    android:text="1234567890"
                    android:textColor="#181737"
                    android:maxLength="16"
                    android:background="#0000"
                    android:padding="16dp"
                    android:typeface="serif"
                    android:gravity="left"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#a2a1b8"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_weight="1"

                    android:textSize="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DOB"
                    android:textColor="#a2a1b8"
                    android:maxLength="12"
                    android:background="#0000"
                    android:padding="16dp"
                    android:gravity="center"
                    />
                <EditText
                    android:layout_weight="1"
                    android:id="@+id/dob"
                    android:textSize="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#1b193b"
                    android:inputType="phone"
                    android:text="00-00-0000"
                    android:textColor="#181737"
                    android:maxLength="10"
                    android:background="#0000"
                    android:padding="16dp"
                    android:typeface="serif"
                    android:gravity="left"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#a2a1b8"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_weight="1"

                    android:textSize="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dept"
                    android:textColor="#a2a1b8"
                    android:maxLength="12"
                    android:background="#0000"
                    android:padding="16dp"
                    android:gravity="center"
                    />
                <EditText
                    android:layout_weight="1"
                    android:id="@+id/depts"
                    android:textSize="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#1b193b"
                    android:inputType="textCapCharacters"
                    android:text="Dept"
                    android:textColor="#181737"
                    android:maxLength="26"
                    android:background="#0000"
                    android:padding="16dp"
                    android:gravity="left"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#a2a1b8"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_weight="1"

                    android:textSize="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textColor="#a2a1b8"
                    android:maxLength="12"
                    android:background="#0000"
                    android:padding="16dp"
                    android:gravity="center"
                    />
                <EditText
                    android:layout_weight="1"
                    android:id="@+id/home"
                    android:textSize="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#1b193b"
                    android:inputType="textCapSentences"
                    android:text="Address not found"
                    android:textColor="#181737"
                    android:background="#0000"
                    android:padding="16dp"
                    android:typeface="serif"
                    android:gravity="left"
                    />
            </LinearLayout>



        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#a2a1b8"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="3dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical">

        </LinearLayout>

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Save Profile"
            android:gravity="center"
            android:id="@+id/butsave"
            android:textColor="#fff"
            android:background="@color/colorPrimary"
            android:padding="10dp"
            android:layout_gravity="center"
            />

    </LinearLayout>
    </RelativeLayout>


</ScrollView>